<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- When TextInputLayout has an error -->
    <item android:color="#FF0000" android:state_enabled="true" android:state_focused="true" />
    <!-- When TextInputLayout is focused -->
    <item android:color="#fcc76f" android:state_focused="true" />
    <!-- Default TextInputLayout underline color -->
    <item android:color="#BDBDBD" />
</selector>
